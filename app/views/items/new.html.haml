  %br     
  = f.label :発送までの日数
  =f.select :"delivery_date", [["---",""],["1~2日で発送","1~2日で発送"],["2~3日で発送","2~3日で発送"],["3~7日で発送","3~7日で発送"]]
  %br 
  = f.label :販売価格
  %br
  = f.label :価格
  = f.number_field :price,placeholder:"例）300"
  = f.submit