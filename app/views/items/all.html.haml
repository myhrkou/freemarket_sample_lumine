.html
  .header
    -if current_user.present?
      =render 'shared/logintop'
    -else
      = render "shared/logouttop"
  .sell
    =link_to new_item_path ,class:'sell__button'do
      .sell__button__text
        出品
      .sell__button__img
        = icon('fas', 'camera',class:"camera")
  .contents
    .contents__carousel
      =image_tag src='/images/header.jpg',class:'carousel'
    .contents__new
      新着アイテム
    %ul.contents__all
      = render 'item'
    .contents__page
      =paginate(@items)
  .footer
    = render "shared/footer"