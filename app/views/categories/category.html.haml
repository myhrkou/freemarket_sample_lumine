.html
  .header
    =render 'shared/header'
  .pan
    - breadcrumb :category
    =render 'layouts/breadcrumbs'
  .sell
    =link_to new_item_path ,class:'sell__button'do
      .sell__button__text
        出品
      .sell__button__img
        = icon('fas', 'camera',class:"camera")
  .category
    .category__title
      カテゴリー一覧
    .category__root
      -@parents.each do |parent|
        =link_to parent.name ,category_root_categories_path(parent.id),class:"category__root__link"
    -@parents.each do |parent|
      .category__box
        .category__title0
          %span　
          =link_to parent.name ,category_root_categories_path(parent.id),class:"category__0"
          -parent.children.each do |child|
            .category__title1
              =link_to child.name ,category_child_categories_path(child.id),class:"category__1"
              -child.children.each do |grandchild|
                .category__title2
                  =link_to grandchild.name ,category_grandchild_categories_path(grandchild.id),class:"category__2"
  .footer
    = render "shared/footer"