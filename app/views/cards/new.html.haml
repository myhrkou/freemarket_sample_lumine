=form_for pay_cards_path,method: :post,id:"charge_form",name:"inputForm" do |f|
  =f.text_field "number",placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
  =f.select "exp_month",[["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]]
  =f.select "exp_year",[["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]]
  =f.text_field "cvc",placeholder:"3or4桁",maxlength:"4",id:"cvc"
  =f.submit "next",id:'token_submit'