.header__top
  .header__top__logo
    = image_tag src="/assets/fmarket_logo_red.svg",class: 'mercari'
  .header__top__search
    .header__top__search__text
      %input{name: "content", type:"text",class: "input",placeholder: '何かお探しですか？'}
      //検索実装時にフォームに変更してください。
    .header__top__search__icon
      = icon('fas', 'search')

.header__bottom
  .header__bottom__left
    .header__bottom__left__category
      = icon('fas', 'list-ul',class:"list-ul")
      カテゴリーから探す
      .category__all
        %li.category__li
          .category__title1.category-list
            カテゴリー１
          .category__item
            %ul.sub
              %li.category__sub1.category-list
                カテゴリー１.１
                %ul.subsub
                  %li.category__subsub1.category-list
                    カテゴリー１.１.1
                  %li.category__subsub2
                    カテゴリー１.1.2
              %li.category__sub2
                カテゴリー１.2

        %li.category__li
          .category__title2
            カテゴリー2
          -# .category__item
          -#   %ul.category__li
          -#     %li.category__sub
          -#       カテゴリー2.１
          -#     %li.category__sub
          -#       カテゴリー2.2

    .header__bottom__left__brand
      = icon('fas', 'tag',class:"tag")
      ブランドから探す
      %ul.brand__all
        %li.brand
          brand1
        %li.brand
          brand2
  .header__bottom__right
    =link_to '新規会員登録',new_user_path,class:"header__bottom__right__register"
    =link_to 'ログイン',users_path,class:"header__bottom__right__login"
