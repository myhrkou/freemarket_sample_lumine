.register3
  .register3__header
    .register3__header__logo
      = image_tag src="/images/fmarket_logo_red.svg",class: 'mercari'
    .register3__header__bar
      %nav.progress-bar3
        %ol.clearfix
          %li.progress-bar3__active
            会員情報
            .progress-bar3__active__status
          %li.progress-bar3__active__phone-number
            電話番号認証
            .progress-bar3__active__status__phone-number
          %li.progress-bar3__active__address
            お届け先住所入力
            .progress-bar3__active__status__address
          %li.progress-bar3__active__payment
            支払い方法
            .progress-bar3__active__status__payment
          %li.progress-bar3__active__complete
            完了
            .progress-bar3__active__status__complete
  .register3__main
    .register3__main__title
      住所入力
    .register3__main__form
      = form_for @user, url: register4_user_steps_path, method: :get do |f|
        .register3__main__form__name
          %b.label
            お名前(全角)
            .required
              必須
        .form
          = f.text_field :last_name, placeholder: '例) 山田',class:"login_textfield"
          = f.text_field :first_name, placeholder: '例) 彩',class:"login_textfield"
        .register3__main__form__yomi
          %b.label
            お名前カナ(全角)
            .required
              必須
          .form
            = f.text_field :yomi_last_name, placeholder: '例) ヤマダ',class:"login_textfield"
            = f.text_field :yomi_first_name, placeholder: '例) アヤ',class:"login_textfield"
        = f.fields_for :address do |fi|
          .register3__main__form__zip
            %b.label
              郵便番号
              .required
                必須
            .form
              =fi.text_field :zip, placeholder: '例) 123-4567',class:"login_textfield"
          .register3__main__form__prefecture
            %b.label
              都道府県
              .required
                必須
            .form
              =fi.select :prefecture,[["--",""],["北海道","北海道"],["青森県","青森県"],["岩手県","岩手県"],["宮城県","宮城県"],["秋田県","秋田県"],["山形県","山形県"],["福島県","福島県"],["茨城県","茨城県"],["栃木県","栃木県"],["群馬県","群馬県"],["埼玉県","埼玉県"],["千葉県","千葉県"],["東京都","東京都"],["神奈川県","神奈川県"],["新潟県","新潟県"],["富山県","富山県"],["石川県","石川県"],["福井県","福井県"],["山梨県","山梨県"],["長野県","長野県"],["岐阜県","岐阜県"],["静岡県","静岡県"],["愛知県","愛知県"],["三重県","三重県"],["滋賀県","滋賀県"],["京都府","京都府"],["大阪府","大阪府"],["兵庫県","兵庫県"],["奈良県","奈良県"],["和歌山県","和歌山県"],["鳥取県","鳥取県"],["島根県","島根県"],["岡山県","岡山県"],["広島県","広島県"],["山口県","山口県"],["徳島県","徳島県"],["香川県","香川県"],["愛媛県","愛媛県"],["高知県","高知県"],["福岡県","福岡県"],["佐賀県","佐賀県"],["長崎県","長崎県"],["熊本県","熊本県"],["大分県","大分県"],["宮崎県","宮崎県"],["鹿児島県","鹿児島県"],["沖縄県","沖縄県"]],class:"login_textfield"
          .register3__main__form__city
            %b.label
              市区町村
              .required
                必須
            .form
              =fi.text_field :city, placeholder: '例) 横浜市緑区',class:"login_textfield"
          .register3__main__form__number
            %b.label
              番地
              .required
                必須
            .form
              =fi.text_field :number, placeholder: '例) 青山1-1-1',class:"login_textfield"
          .register3__main__form__building
            %b.label
              建物名
              .any
                任意
            .form
              =fi.text_field :building, placeholder: '例) 柳ビル103',class:"login_textfield"
          .register3__main__form__tel
            %b.label
              電話
              .any
                任意
            .form
              =f.text_field :phone_number, placeholder: '09012345678',class:"login_textfield"
        =f.submit "次へ進む",class:"login_button"
  =render "users/footer"